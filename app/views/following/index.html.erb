<h1>Following</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Following</th>
    <th>Followers</th>
    <th>Last Tweeted At</th>
  </tr>

<% @cursor.attrs[:users].each do |user| %>
  <tr>
    <td><%= image_tag(url_for(user[:profile_image_url]), :size => "48x48", :alt => user[:screen_name]) %></td>
    <td><%= user[:screen_name] %></td>
    <td><%= user[:friends_count] %></td>
    <td><%= user[:followers_count] %></td>
    <td><%= "#{time_ago_in_words(user[:status][:created_at])} ago" if user[:status] %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to('Next', following_path(:cursor => @cursor.next)) if @cursor.next != 0 %>
